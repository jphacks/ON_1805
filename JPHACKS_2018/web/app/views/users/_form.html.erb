<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', object:@user %>

  <%= f.label :ie_number, "学籍番号(半角数字のみ)" %>
  <%= f.text_field :ie_number, class: 'form-control' %>

  <%= f.label :email %>
  <%= f.email_field :email, class: 'form-control' %>

  <%= f.label :gpa, "GPA" %>
  <%= f.number_field :gpa, class: 'form-control', min:0.00, max:4.00, step:0.01 %>

  <%= f.label :laboratory_id, "希望研究室" %>
  <%= f.select :laboratory_id, Laboratory.all.map {|n| [n.name, n.id]} %>

  <%= f.label :password %>
  <%= f.password_field :password, class: 'form-control' %>

  <%= f.label :password_confirmation, "Confirmation" %>
  <%= f.password_field :password_confirmation, class: 'form-control' %>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
